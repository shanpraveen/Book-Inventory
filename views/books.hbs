<div class="row">
  <div class="col-md-12">
    <br>
    <h2>
      Books
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Publication Year</th>
            <th>Available Copies</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#if books}}
            {{#each books}}
              <tr>
                <td>{{this.bookId}}</td>
                <td><a href="/books/{{this.bookId}}">{{this.title}}</a></td>
                <td>{{this.author.firstName}} {{this.author.lastname}}</td>
                <td>{{this.genre}}</td>
                <td>{{this.publicationYear}}</td>
                <td>{{this.availableCopies}}</td>
                <td>
                  <a href="/book/delete/{{this.bookId}}"><button class="btn btn-danger">Remove</button></a>
                  <a href="/books/{{this.bookId}}"><button class="btn btn-primary">Edit</button></a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="7" class="text-center"><strong>{{message}}</strong></td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>

    <a href="/books/add" class="btn btn-success float-right">Add New Book</a>

  </div>
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
</div>
